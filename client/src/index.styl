@import nib

html {
  font-family: Nunito, sans-serif;
}

html, body {
  min-height: 100%;
  padding: 0;
  margin: 0;
  background: #333;
  color: #fff;

  min-width: 800px;
}

canvas, a {
  user-select: none;
}

* {
  box-sizing: border-box;
}

a {
  color: #ccc;
  text-decoration: none;
  &:hover, &.active {
    color: #fff;
  }
}

:focus {
  outline: none;
}

#loading {
  text-align: center;
  margin: 50px;
  height: 300px;
  font-size: 2em;
}

@import app
@import ui
