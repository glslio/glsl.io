.glsl-contextual-help {
  .glsl-documentation-no-context, .glsl-documentation {
    min-height: 160px;
    box-sizing: border-box;
  }
  .glsl-documentation-no-context {
    p {
      opacity: 0.6;
      font-size: 0.8em;
      padding: 1em;
      background: #222;
      border-radius: 0.5em;
      margin: 0;
    }
  }
  .glsl-documentation {
    p {
      margin: 2px 0;
    }
    .glsl-token-type-name {
      margin-bottom: 2px;
      overflow: auto;
      .glsl-token-type {
        float: right;
        margin-right: 0.5em;
      }
      .glsl-token-name {
        float: left;
      }
    }
    .glsl-token-type {
      font-weight: bold;
      text-transform: uppercase;
      font-size: 0.5em;
      background: #000;
      padding: 1px 3px;
      border-radius: 2px;
    }
    .glsl-token-name {
      font-family: monospace;
    }
    .glsl-token-usage {
      width: 100%;
      box-sizing: border-box;
      font-size: 0.8em;
    }
    .glsl-token-description {
      font-weight: 300;
      font-style: italic;
      padding: 0.6em;
      font-size: 0.8em;
      opacity: 0.7;
      background: #222;
    }
  }
  .links {
    list-style: none;
    margin: 0;
    padding: 0;
    a {
      i {
        width: 22px;
        text-align: center;
      }
      padding: 4px 0;
      display: inline-block;
    }
  }
}
