
.transitions-browser-pager {
  position: relative;
  font-size: 1.2em;
  padding: 0.5em 1em;
  display: block;
  text-align: center;
  span {
    color: #aaa;
  }
  a {
    cursor: pointer;
  }
  a.prev {
    position: absolute;
    left: 20px;
  }
  a.next {
    position: absolute;
    right: 20px;
  }
}
