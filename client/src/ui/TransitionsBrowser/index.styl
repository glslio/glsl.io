    &:hover {
      color: #fff;
    }
  }

  .previews {
    min-height: 40px;
    padding-top: 10px;
    margin: 0 auto;
  }

  .vignette {
    display: inline-block;
    margin: 0px 5px 5px 5px;
    width: 300px;
    height: 200px;
    cursor: pointer;
  }

